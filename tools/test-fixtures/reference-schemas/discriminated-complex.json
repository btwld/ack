{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "anyOf": [
    {
      "type": "object",
      "properties": {
        "paymentMethod": {
          "type": "string",
          "const": "card"
        },
        "cardNumber": {
          "type": "string",
          "minLength": 16,
          "maxLength": 16
        },
        "cvv": {
          "type": "string",
          "minLength": 3,
          "maxLength": 4
        },
        "expiryDate": {
          "type": "string"
        }
      },
      "required": [
        "paymentMethod",
        "cardNumber",
        "cvv",
        "expiryDate"
      ],
      "additionalProperties": false
    },
    {
      "type": "object",
      "properties": {
        "paymentMethod": {
          "type": "string",
          "const": "bank"
        },
        "accountNumber": {
          "type": "string"
        },
        "routingNumber": {
          "type": "string"
        }
      },
      "required": [
        "paymentMethod",
        "accountNumber",
        "routingNumber"
      ],
      "additionalProperties": false
    },
    {
      "type": "object",
      "properties": {
        "paymentMethod": {
          "type": "string",
          "const": "crypto"
        },
        "wallet": {
          "type": "string"
        },
        "currency": {
          "type": "string"
        }
      },
      "required": [
        "paymentMethod",
        "wallet",
        "currency"
      ],
      "additionalProperties": false
    }
  ]
}