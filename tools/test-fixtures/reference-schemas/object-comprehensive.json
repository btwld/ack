{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "A comprehensive user object",
  "type": "object",
  "properties": {
    "id": {
      "type": "integer",
      "exclusiveMinimum": 0,
      "maximum": 9007199254740991
    },
    "email": {
      "type": "string",
      "minLength": 5,
      "maxLength": 100,
      "format": "email",
      "pattern": "^(?!\\.)(?!.*\\.\\.)([A-Za-z0-9_'+\\-\\.]*)[A-Za-z0-9_+-]@([A-Za-z0-9][A-Za-z0-9\\-]*\\.)+[A-Za-z]{2,}$"
    },
    "name": {
      "type": "string",
      "minLength": 2,
      "maxLength": 50
    },
    "age": {
      "anyOf": [
        {
          "type": "integer",
          "minimum": 0,
          "maximum": 120
        },
        {
          "type": "null"
        }
      ]
    },
    "tags": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        {
          "type": "null"
        }
      ]
    },
    "isActive": {
      "default": true,
      "type": "boolean"
    },
    "metadata": {}
  },
  "required": [
    "id",
    "email",
    "name",
    "age",
    "tags",
    "isActive"
  ],
  "additionalProperties": false
}