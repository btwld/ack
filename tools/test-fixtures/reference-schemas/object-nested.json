{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "user": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string",
          "format": "email",
          "pattern": "^(?!\\.)(?!.*\\.\\.)([A-Za-z0-9_'+\\-\\.]*)[A-Za-z0-9_+-]@([A-Za-z0-9][A-Za-z0-9\\-]*\\.)+[A-Za-z]{2,}$"
        }
      },
      "required": [
        "name",
        "email"
      ],
      "additionalProperties": false
    },
    "settings": {
      "type": "object",
      "properties": {
        "theme": {
          "default": "light",
          "type": "string"
        },
        "notifications": {
          "default": true,
          "type": "boolean"
        }
      },
      "required": [
        "theme",
        "notifications"
      ],
      "additionalProperties": false
    }
  },
  "required": [
    "user",
    "settings"
  ],
  "additionalProperties": false
}