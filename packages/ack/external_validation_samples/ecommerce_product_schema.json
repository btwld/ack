{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "product": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 200
        },
        "description": {
          "type": [
            "string",
            "null"
          ],
          "maxLength": 1000
        },
        "price": {
          "type": "number",
          "minimum": 0.01
        },
        "currency": {
          "type": "string",
          "pattern": "^[A-Z]{3}$"
        },
        "category": {
          "type": "string",
          "enum": [
            "electronics",
            "clothing",
            "books",
            "home",
            "sports"
          ]
        },
        "inStock": {
          "type": "boolean"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "uniqueItems": true,
          "maxItems": 20
        },
        "images": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri"
          },
          "minItems": 1,
          "maxItems": 10
        },
        "specifications": {
          "type": "object",
          "properties": {
            "weight": {
              "type": [
                "number",
                "null"
              ],
              "minimum": 0.0
            },
            "dimensions": {
              "type": [
                "object",
                "null"
              ],
              "properties": {
                "length": {
                  "type": "number",
                  "minimum": 0.0
                },
                "width": {
                  "type": "number",
                  "minimum": 0.0
                },
                "height": {
                  "type": "number",
                  "minimum": 0.0
                }
              },
              "additionalProperties": false
            },
            "color": {
              "type": [
                "string",
                "null"
              ]
            },
            "material": {
              "type": [
                "string",
                "null"
              ]
            }
          },
          "additionalProperties": false
        }
      },
      "required": [
        "id",
        "name",
        "price",
        "currency",
        "category",
        "inStock"
      ],
      "additionalProperties": false
    }
  },
  "required": [
    "product"
  ],
  "additionalProperties": false,
  "_sample_valid_data": {
    "example": "This would contain valid sample data for testing",
    "note": "Replace with actual valid data matching the schema"
  },
  "_sample_invalid_data": {
    "example": "This would contain invalid sample data for testing",
    "note": "Replace with actual invalid data that should fail validation"
  }
}